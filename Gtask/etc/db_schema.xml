<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="employeesdata" resource="default" engine="innodb" comment="Employees Data">
      <column xsi:type="smallint" name="id" padding="7" unsigned="false"  identity="true" comment="ID" />
      <column xsi:type="varchar" name="firstname" length="20" comment="Name" />
      <column xsi:type="varchar" name="lastname" length="30"  />
        <column xsi:type="varchar" name="email" length="30"  />
      <column xsi:type="varchar" name="phone" />

      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="id" />
      </constraint>
   </table>
</schema>